<!-----YOUTUBE検索結果 動画表示------>
<hr>
<div class="container">
  <h1 class="text-center mb-5">YOUTUBEレシピ検索画面</h1>
  <% if @youtube_data.present? %>
    <div class="row justify-content-center">
      <% @youtube_data.items.each do |item| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= item.id.video_id %>" allowfullscreen></iframe>
            </div>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to(item.snippet.title, "https://www.youtube.com/watch?v=#{item.id.video_id}", target: "_blank") %>
              </h4>
              <p class="card-text"><%= item.snippet.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<!----検索フォーム----->
<div class="d-flex justify-content-center">
  <%= form_tag(youtube_index_path, method: :get) do %>
    <div class="input-group mb-3">
      <%= text_field_tag(:search, nil, placeholder: '例 ）ハンバーグ', class: "form-control", style: "width: 300px;") %>
      <button type="submit" class="btn btn-primary"> 検索</button>
    </div>
  <% end %>
</div>
